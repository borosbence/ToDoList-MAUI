<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeendokLista.MAUI.Resources.TaskTmp">

    <!--<Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="#EEE" />
    </Style>-->

    <Style x:Key="titleEntry" TargetType="Entry">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold,Italic" />
    </Style>
    <Style x:Key="contentEditor" TargetType="Editor">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="300" />
        <Setter Property="AutoSize" Value="TextChanges" />
    </Style>

    <Style x:Key="btnStyle" TargetType="Button">
        <Setter Property="WidthRequest" Value="120" />
    </Style>

    <LinearGradientBrush x:Key="nonCompletedFalse">
        <GradientStop Color="LightGoldenrodYellow" Offset="0" />
        <GradientStop Color="Yellow" Offset="1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="isCompleted" Color="LightGray" />

    <Style x:Key="deadLinePicker" TargetType="DatePicker">
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsCloseDL}" TargetType="DatePicker" Value="True" >
                <Setter Property="BackgroundColor" Value="Red" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="detailsPage" TargetType="ContentPage" >
        <Style.Triggers>
            <DataTrigger Binding="{Binding ToDoTask.IsCompleted}" TargetType="ContentPage" Value="False">
                <Setter Property="Background" Value="{StaticResource nonCompletedFalse}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding ToDoTask.IsCompleted}" TargetType="ContentPage" Value="True">
                <Setter Property="Background" Value="{StaticResource isCompleted}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>